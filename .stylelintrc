{
  "extends": [
    "stylelint-config-standard",
    "./node_modules/prettier-stylelint/config.js"
  ],
  "syntax": "scss",
  "ignoreFiles": "**/*.tsx",
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "function",
          "if",
          "each",
          "include",
          "mixin",
          "else",
          "warn",
          "return",
          "extend",
          "global",
          ":"
        ]
      }
    ]
  }
}